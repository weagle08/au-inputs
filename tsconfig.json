{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "target": "es2017",
        "module": "amd",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./typings/index.d.ts",
        "./custom_typings/**/*.d.ts",
        "./jspm_packages/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "jspm_packages",
        "dist",
        "build"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}